# Header logging
e_header() {
    printf "\n${c_bold}%s${c_reset}\n" "$@"
}

e_info() {
    printf "${c_green}%s${c_reset}\n" "$@"
}

# Success logging
e_success() {
    printf "${c_green}${c_bold}âœ“ %s${c_reset}\n" "$@"
}

# Error logging
e_error() {
    printf "${c_red}${c_bold}X %s${c_reset}\n" "$@"
}

# Warning logging
e_warning() {
    printf "${c_yellow}${c_bold}! %s${c_reset}\n" "$@"
}

#vim: filetype=sh
